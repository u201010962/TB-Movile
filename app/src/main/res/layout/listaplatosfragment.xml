<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="2dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#f5f5f5">


    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">



            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"

                android:scaleType="fitXY"
                android:layout_height="190dp"
                android:cropToPadding="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/precio"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="14dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/descripcion"
                android:layout_alignStart="@+id/descripcion"
                android:layout_marginBottom="12dp"
                android:paddingTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/descripcion"
                android:layout_above="@+id/precio"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="10dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                style="@android:style/Widget.Material.CompoundButton.CheckBox"
                android:duplicateParentState="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:checked="false"
                android:elevation="0dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_alignBaseline="@+id/descripcion"
                android:layout_alignBottom="@+id/descripcion"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

